<body>
  <div class="container-fluid">
    <div class="row">
      <section class="masthead" role="img" aria-label=" Gourmet Burger Trio">
        <h1>Erin's Gourmet Burger Joint</h1>
      </section>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row">
      <div class="menu-area col-12 pt-4 d-flex">
        <h2>Seasonal Burger Menu</h2>

        <ul class="menu-list">
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burgers-block devoured = true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="row">
        <div class="Eaten-area col-8 p-4 d-flex">
          <h3>Devoured Burgers:</h3>

          <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burgers-block devoured = false}}
            {{/if}}
            {{/each}}
          </ul>
        </div>
        <div class="Add-area col-3 p-4 d-flex">
           <form class="create-form">
          <h3>Add Your Own Burger to the Menu!</h3>
            <div class="form-group">
              <label for="bur"> Fancy Burger Name:</label>
              <input type="text" id="bur" name="burger_name">
            </div>

            <button class="btn btn-lg btn-info" type="submit">Add Your Burger</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  